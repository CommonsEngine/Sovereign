{
  "name": "sovereign",
  "description": "Reclaim your digital freedom.",
  "private": true,
  "version": "3",
  "license": "AGPL-3.0",
  "cliVersion": "0.1.0",
  "bin": {
    "sv": "./bin/sv.mjs"
  },
  "workspaces": [
    "platform",
    "plugins/*"
  ],
  "scripts": {
    "init:prepare": "yarn workspace @sovereign/platform init:prepare",
    "init:setup": "yarn workspace @sovereign/platform init:setup",
    "bootstrap": "yarn install",
    "build": "yarn workspaces run build",
    "dev": "yarn workspace @sovereign/platform dev",
    "postinstall": "husky",
    "format:check": "prettier --check .",
    "format": "prettier --ignore-path .prettierignore --write .",
    "lint:check": "eslint .",
    "lint": "eslint . --fix",
    "prisma:legacy": "yarn workspace @sovereign/platform prisma generate --schema prisma/schema.prisma",
    "prisma:compose": "node tools/database-prisma-compose.mjs",
    "db:generate": "yarn prisma:compose && yarn workspace @sovereign/platform prisma generate --schema platform/prisma/schema.prisma",
    "db:migrate": "yarn prisma:compose && yarn workspace @sovereign/platform prisma migrate dev --create-only --schema platform/prisma/schema.prisma",
    "db:apply": "yarn prisma:compose && yarn workspace @sovereign/platform prisma migrate dev --schema platform/prisma/schema.prisma",
    "db:deploy": "yarn prisma:compose && yarn workspace @sovereign/platform prisma migrate deploy --schema platform/prisma/schema.prisma",
    "db:studio": "yarn workspace @sovereign/platform prisma studio --schema platform/prisma/schema.prisma",
    "db:seed": "node tools/database-seed-all.mjs",
    "db:reset": "node tools/database-reset.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.22",
  "repository": "https://github.com/CommonsEngine/Sovereign#readme",
  "bugs": {
    "url": "https://github.com/CommonsEngine/Sovereign/issues",
    "email": "mailtokasun@gmail.com"
  },
  "contributors": [
    {
      "name": "Kasun Benthara",
