{
  "type": "custom",
  "id": "{{PLUGIN_ID}}",
  "namespace": "{{NAMESPACE}}",
  "name": "{{DISPLAY_NAME}}",
  "description": "{{DESCRIPTION}}",
  "version": "{{VERSION}}",
  "devOnly": true,
  "draft": false,
  "entryPoints": {
    "api": "routes/api/index.js",
    "web": "routes/web/index.js"
  },
  "author": "{{AUTHOR}}",
  "license": "{{LICENSE}}",
  "sovereign": {
    "schemaVersion": 1,
    "allowMultipleInstances": true,
    "compat": { "platform": "^0.8.0", "node": ">=20" },
    "database": {{PLUGIN_DATABASE_BLOCK}},
    "platformCapabilities": {
      "database": false,
      "git": false,
      "fs": false
    },
    "userCapabilities": [
      {
        "key": "user:plugin.{{NAMESPACE}}.feature",
        "description": "Enable the {{DISPLAY_NAME}} plugin.",
        "roles": ["platform:user"]
      }
    ]
  }
}
